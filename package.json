{
  "name": "electron-boilerplate",
  "version": "1.0.0",
  "main": "dist/electron/electronApp.js",
  "license": "MIT",
  "scripts": {
    "build:web": "webpack --env.NODE_ENV=production --env.WEB --config config/webpack.config.js",
    "build:electron": "webpack --env.NODE_ENV=production --env.ELECTRON --config config/webpack.config.js",
    "dist": "electron-builder --config config/electron-builder.yml",
    "electron:server": "webpack-dev-server --env.NODE_ENV=development --env.ELECTRON --config config/webpack.config.react.js",
    "electron:client": "webpack --env.NODE_ENV=development --config config/webpack.config.electron.js && electron .",
    "web:server": "webpack-dev-server --env.NODE_ENV=development --config config/webpack.config.react.js --open"
  },
  "devDependencies": {
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.2.2",
    "electron": "^9.2.1",
    "electron-builder": "^22.8.0",
    "html-webpack-plugin": "^4.3.0",
    "less-loader": "^6.2.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
